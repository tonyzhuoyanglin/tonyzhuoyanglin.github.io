{
    "printWidth": 100,
    "tabWidth": 4,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "as-needed",
    "trailingComma": "es5",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "htmlWhitespaceSensitivity": "css",
    "overrides": [
        {
            "files": "*.html",
            "options": {
                "printWidth": 120,
                "tabWidth": 4
            }
        },
        {
            "files": "*.css",
            "options": {
                "singleQuote": false
            }
        }
    ]
}
